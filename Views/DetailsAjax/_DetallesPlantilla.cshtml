@using MVC_Hospitales.Models
@model IQueryable<PLANTILLA>

@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                APELLIDO
            </th>
            <th>
                FUNCIÓN
            </th>
            <th>
                SALARIO
            </th>
            <th>
                ACCIONES
            </th>
        </tr>

        @foreach (var plan in Model)
        {
            <tr>
                <td>
                    @plan.APELLIDO
                </td>
                <td>
                    @plan.T
                </td>
                <td>
                    @plan.SALARIO €.
                </td>
                <td>
                    @Html.ActionLink("Gestionar", "GestionEquipo", "Gestion", new { empNo = plan.EMPLEADO_NO }, null)
                </td>
            </tr>
        }

    </table>
}

else
{
    <h2 style="color:red">No existe personal médico en este hospital</h2>
}
