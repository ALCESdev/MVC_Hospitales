@{
    ViewBag.Title = "VistaHospitales";
}
@using MVC_Hospitales.Models
@model IQueryable<HOSPITAL>
<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" />


<h2>Nuestros Hospitales</h2>

@if (Model != null)
{
    <div class="container">
        <div class="row mt-5 mb-5">
            @foreach (var hosp in Model)
            {
                <div class="col-12 col-md-6 mb-4">
                    <div class="card bg-light">
                        <div class="row g-0">
                            <div class="col-md-6">
                                <img src="~/Images/Hospitals/@hosp.LINK_IMAGEN" class="card-img" alt="Imágen @hosp.NOMBRE">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body ml-3">
                                    <h5 class="card-title">@hosp.NOMBRE</h5>
                                    <p class="card-text">@hosp.DIRECCION</p>
                                    <p class="card-text">@hosp.TELEFONO</p>
                                    <p class="card-text">@Html.ActionLink("Más detalles", "VistaDetalles", "Hospitales", new { hospCod = hosp.HOSPITAL_COD, hospNom = hosp.NOMBRE }, null)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


else
{
    <h3 class="hospError">No se han podido mostrar los hospitales</h3>
}

